@model PlexClone.Models.Libraries
<form class="libraryForm" action="AddLibrary" method="POST">
    <span asp-validation-for="Name"></span> <br>
    <label for="Name">Name:</label>
    <input type="text" name="Name"> <br>
    <span asp-validation-for="Folder"></span> <br>
    <label for="Folder">Path:</label>
    <input type="text" name="Folder"> <br>
    <span></span> <br>
    <label for="Type">Type:</label>
    <select name="Type">
        <option value="Movies">Movies</option>
        <option value="Pictures">Pictures</option>
        <option value="TVShows">TVShows</option>
    </select>
    <br>
    <input class="submitButton"type="submit" name="" id="" value="Add">
</form>